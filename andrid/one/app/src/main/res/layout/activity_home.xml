<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:con="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#EDEDED"
              tools:context="com.ace.activity.LoginActivity">
    <com.ace.template.Top
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff0000"
        con:mtitle="主页"
        con:mtitleTextColor="#ffffff"
        con:mtitleTextSize="6sp">
    </com.ace.template.Top>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

    <com.ace.template.Bot
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffff"
        con:dleftBackground="@mipmap/home_on"
        con:dcentBackground="@mipmap/community_normal"
        con:drightBackground="@mipmap/user_info_normal"
        android:layout_marginBottom="0dp">
    </com.ace.template.Bot>
</LinearLayout>