<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/notice_viewpage"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/point_left"
                android:src="@mipmap/point_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/point_center"
                android:src="@mipmap/point_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/point_right"
                android:src="@mipmap/point_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal">
            <ImageButton
                android:id="@+id/option_first"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.4"
                android:src="@mipmap/market"
                android:layout_marginRight="2dp"
                />
            <ImageButton
                android:src="@mipmap/lost"
                android:id="@+id/option_seconed"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.4"
                android:layout_marginLeft="2dp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal">
            <ImageButton
                android:src="@mipmap/repair1"
                android:id="@+id/option_thrid"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.4"
                android:layout_marginRight="2dp"
                />
            <ImageButton
                android:src="@mipmap/com"
                android:id="@+id/option_four"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.4"
                android:layout_marginLeft="2dp"
                />
        </LinearLayout>
    </LinearLayout>
