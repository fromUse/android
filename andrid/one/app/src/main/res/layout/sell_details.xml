<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:con="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.ace.template.Top
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        con:mtitle="详情"
        con:mtitleTextColor="#ffffff"
        con:mtitleTextSize="8sp">


    </com.ace.template.Top>

    <TextView
        android:id="@+id/market_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:gravity="center"
        android:text="New Text"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/market_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:text="描述内容"
        android:textSize="16sp"/>

    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/market_details_img"
        android:src="@mipmap/ic_launcher"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="right"
            android:text="联系电话:"
            />

        <TextView
            android:id="@+id/market_details_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/market_details_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:paddingRight="15sp"
        android:text="2015-10-1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/market_details_send_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@android:drawable/ic_menu_send"
            />

        <ImageButton
            android:id="@+id/market_details_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@android:drawable/stat_sys_phone_call"
            />
    </LinearLayout>
</LinearLayout>